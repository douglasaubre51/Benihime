@model Race

@using Benihime.Data.Enum

@{
    ViewBag.Title = "Create";
}

<link rel="stylesheet" href="~/css/raceCreate.css" />

<div class="create-container">
    <form class="form" method=post asp-action="Create" asp-controller="Race">
        <div class="form-group">
            <label asp-for="Title">Title</label>
            <input asp-for="Title" />
            <span asp-validation-for="Title"></span>
        </div>

        <div class="form-group">
            <label asp-for="Description">Description</label>
            <input asp-for="Description" />
            <span asp-validation-for="Description"></span>
        </div>

        <div class="form-group">
            <label asp-for="Image">Image</label>
            <input asp-for="Image" />
            <span asp-validation-for="Image"></span>
        </div>

        <div class="form-group">
            <label asp-for="RaceCategory">Race Category</label>
            <select asp-for="RaceCategory" asp-items="@Html.GetEnumSelectList<RaceCategory>()">
                <option>---select---</option>
            </select>
            <span asp-validation-for="RaceCategory"></span>
        </div>

        <div class="form-group">
            <label asp-for="Address.Street">Street</label>
            <input asp-for="Address.Street" />
            <span asp-validation-for="Address.Street"></span>
        </div>

        <div class="form-group">
            <label asp-for="Address.City">City</label>
            <input asp-for="Address.City" />
            <span asp-validation-for="Address.City"></span>
        </div>

        <div class="form-group">
            <label asp-for="Address.State">State</label>
            <input asp-for="Address.State" />
            <span asp-validation-for="Address.State"></span>
        </div>

        <div class="form-group">
            <input class="submit-btn" type="submit" value="create" />
        </div>
    </form>
</div>