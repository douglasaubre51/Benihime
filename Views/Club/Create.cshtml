@using Benihime.Data.Enum
@model Benihime.ViewModels.CreateClubViewModel

@{
    ViewBag.Title = "Create";
}

<link rel="stylesheet" href="~/css/clubCreate.css" />

<div class="create-container">
    <form class="form" method=post asp-action="Create" asp-controller="Club" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="Title">Title</label>
            <input asp-for="Title" />
            <span asp-validation-for="Title"></span>
        </div>

        <div class="form-group">
            <label asp-for="Description">Description</label>
            <input asp-for="Description" />
            <span asp-validation-for="Description"></span>
        </div>

        <div class="form-group">
            <label asp-for="Image">Image</label>
            <input type="file" asp-for="Image" />
            <span asp-validation-for="Image"></span>
        </div>

        <div class="form-group">
            <label asp-for="clubCategory">Club Category</label>
            <select asp-for="clubCategory" asp-items="@Html.GetEnumSelectList<ClubCategory>()">
                <option>---select---</option>
            </select>
            <span asp-validation-for="clubCategory"></span>
        </div>

        <div class="form-group">
            <label asp-for="address.Street">Street</label>
            <input asp-for="address.Street" />
            <span asp-validation-for="address.Street"></span>
        </div>

        <div class="form-group">
            <label asp-for="address.City">City</label>
            <input asp-for="address.City" />
            <span asp-validation-for="address.City"></span>
        </div>

        <div class="form-group">
            <label asp-for="address.State">State</label>
            <input asp-for="address.State" />
            <span asp-validation-for="address.State"></span>
        </div>

        <div class="form-group">
            <input class="submit-btn" type="submit" value="create" />
        </div>
    </form>
</div>